{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "components": ["components"],
            "config": ["config"],
            "pages": ["pages"],
            "shared": ["shared"],
            "store": ["store"],
            "styles": ["styles"],
            "utils": ["utils"]
        },
        "noEmit": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "module":"ES6",
        "target": "ES6",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}